@model DoAnWeb.Models.Contact

@{
    ViewData["Title"] = "Delete";
}

<div class="container-fluid">
    <div class="container-fluid">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title fw-semibold mb-4">Chi tiết</h5>
                <div class="card">
                    <div class="card-body">
                        <h4>@Model.Name</h4>
                        <div>
                            <dl class="row">
                                <dt class="col-sm-2 fw-semibold border-bottom-0">
                                    Họ và tên:
                                </dt>
                                <dd class="col-sm-10 fw-semibold border-bottom-0">
                                    @Html.DisplayFor(model => model.Name)
                                </dd>
                                <dt class="col-sm-2 fw-semibold border-bottom-0">
                                    Điện thoại:
                                </dt>
                                <dd class="col-sm-10 fw-semibold border-bottom-0">
                                    @Html.DisplayFor(model => model.Phone)
                                </dd>
                                <dt class="col-sm-2 fw-semibold border-bottom-0">
                                    Email:
                                </dt>
                                <dd class="col-sm-10 fw-semibold border-bottom-0">
                                    @Html.DisplayFor(model => model.Email)
                                </dd>
                                <dt class="col-sm-2 fw-semibold border-bottom-0">
                                    Tin nhắn:
                                </dt>
                                <dd class="col-sm-10 fw-semibold border-bottom-0">
                                    @Html.DisplayFor(model => model.Message)
                                </dd>
                                <dt class="col-sm-2 fw-semibold border-bottom-0">
                                    Trạng thái
                                </dt>
                                <dd class="col-sm-10 fw-semibold border-bottom-0 fw-semibold border-bottom-0 fw-semibold border-bottom-0">
                                    @if (Model.IsRead)
                                    {
                                        <span class="text-success">Đã đọc</span>
                                    }
                                    else
                                    {
                                        <span class="text-danger">Chưa đọc</span>
                                    }
                                </dd>
                                <dt class="col-sm-2 fw-semibold border-bottom-0">
                                    Ngày gửi:
                                </dt>
                                <dd class="col-sm-10 fw-semibold border-bottom-0">
                                    @Html.DisplayFor(model => model.CreatedDate)
                                </dd>
                            </dl>
                            <form asp-action="Delete">
                                <input type="hidden" asp-for="ContactId" />
                                <input type="submit" value="Xóa" class="btn btn-danger btn-delete m-1" /> |
                                <a asp-action="Index" type="button" class="btn btn-outline-primary m-1">Quay lại</a>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>