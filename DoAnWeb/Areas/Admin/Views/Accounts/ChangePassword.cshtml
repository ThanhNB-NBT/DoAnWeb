@model ChangePassword

@{
    ViewData["Title"] = "ChangePassword";

    var errorMessage = TempData["ErrorMessage"] as string;
    TempData["ErrorMessage"] = null;
}



<div class="container-fluid">
    <div class="row">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title fw-semibold mb-4">Đổi mật khẩu</h5>
               

                @if (!string.IsNullOrEmpty(errorMessage))
                {
                    <div id="errorAlert" class="alert alert-danger">
                        @errorMessage
                    </div>
                }
                <div class="card">
                    <div class="card-body">
                        <form asp-action="ChangePassword" method="post">
                            <input type="hidden" asp-for="AccountId" />
                       
                            <div class="form-group">
                                <label asp-for="CurrentPassword" class="control-label form-label">Mật khẩu hiện tại:</label>
                                <input type="password" asp-for="CurrentPassword" class="form-control" required />
                            </div>

                            <div class="form-group">
                                <label asp-for="NewPassword" class="control-label form-label">Mật khẩu mới:</label>
                                <input type="password" asp-for="NewPassword" class="form-control" required />
                            </div>

                            <div class="form-group" >
                                <label asp-for="ConfirmPassword" class="control-label form-label">Nhập lại mật khẩu:</label>
                                <input type="password" asp-for="ConfirmPassword" class="form-control" required />
                            </div>
                            <button type="submit" class="btn btn-primary" style="margin-top: 10px;">Đổi mật khẩu</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




