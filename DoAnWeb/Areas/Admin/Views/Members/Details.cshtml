@model DoAnWeb.Models.Member

@{
    ViewData["Title"] = "Chi tiết]";
}

<div class="container-fluid">
    <div class="container-fluid">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title fw-semibold mb-4">Chi tiết</h5>
                <div class="card">
                    <div class="card-body">
                        <h4>@Model.Name</h4>
                        <div>
                            <dl class="row">
                                <dt class="col-sm-2 fw-semibold border-bottom-0">
                                    Tên thành viên:
                                </dt>
                                <dd class="col-sm-10 fw-semibold border-bottom-0">
                                    @Html.DisplayFor(model => model.Name)
                                </dd>
                                <dt class="col-sm-2 fw-semibold border-bottom-0">
                                    Hiển thị:
                                </dt>
                                <dd class="col-sm-10 fw-semibold border-bottom-0">
                                    @if (Model.IsActive)
                                    {
                                        <span class="text-success">Có</span>
                                    }
                                    else
                                    {
                                        <span class="text-danger">Không</span>
                                    }
                                </dd>
                                <dt class="col-sm-2 fw-semibold border-bottom-0">
                                    Vị trí làm việc:
                                </dt>
                                <dd class="col-sm-10 fw-semibold border-bottom-0">
                                    @Html.DisplayFor(model => model.WorkPosition)
                                </dd>
                                <dt class="col-sm-2 fw-semibold border-bottom-0">
                                    Chi tiết:
                                </dt>
                                <dd class="col-sm-10 fw-semibold border-bottom-0">
                                    @Html.DisplayFor(model => model.Detail)
                                </dd>
                                @* <dt class="col-sm-2 fw-semibold border-bottom-0">
                                    @Html.DisplayNameFor(model => model.Link)
                                </dt>
                                <dd class="col-sm-10 fw-semibold border-bottom-0">
                                    @Html.DisplayFor(model => model.Link)
                                </dd> *@
                                <dt class="col-sm-2 fw-semibold border-bottom-0">
                                    Lời nhắn:
                                </dt>
                                <dd class="col-sm-10 fw-semibold border-bottom-0">
                                    @Html.DisplayFor(model => model.Message)
                                </dd>
                                <dt class="col-sm-2 fw-semibold border-bottom-0">
                                    Hình ảnh:
                                </dt>
                                <dd class="col-sm-10 fw-semibold border-bottom-0">
                                    @Html.DisplayFor(model => model.Image)
                                </dd>
                            </dl>
                        </div>
                    </div>
                </div>
                <div>
                    <a asp-action="Edit" asp-route-id="@Model?.MemberId" class="btn btn-danger btn-edit m-1">Sửa</a> |
                    <a asp-action="Index" type="button" class="btn btn-outline-primary m-1">Quay lại</a>
                </div>
            </div>
        </div>
    </div>
</div>